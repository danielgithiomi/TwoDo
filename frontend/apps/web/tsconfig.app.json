{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "typeRoots": [
      "./../../packages/types/declarations",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@tdw/api": ["./../../packages/api"],
      "@tdw/images": ["./src/assets/images"],
      "@tdw/types": ["./../../packages/types"],
      "@tdw/stores": ["./../../packages/stores"],
      "@tdw/constants": ["./../../packages/constants"],
      "@tdw/components": ["./../../packages/components"],
      "@tdw/atoms": ["./../../packages/components/atoms"],
    }
  },
  "include": ["src/**/*", "./../../packages/**/*"]
}
