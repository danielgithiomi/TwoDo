{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@tdp/*": ["./*/src"],
      "@tdp/api": ["./api"],
      "@tdp/libs": ["./libs"],
      "@tdp/types": ["./types"],
      "@tdp/stores": ["./stores"],
      "@tdp/hooks": ["./ui-hooks"],
      "@tdp/constants": ["./constants"],
      "@tdp/components/*": ["./components/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
