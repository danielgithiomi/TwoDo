{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@tdp/*": ["./*/src"],
      "@tdp/api": ["./api"],
      "@tdp/constants": ["./constants"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
