{
  "name": "twodo",
  "version": "1.0.0",
  "description": "TwoDo is a personal bucket-list application designed for couples and friends to create, share, and track activities.",
  "main": "index.js",
  "workspaces": [
    "server",
    "frontend/apps/*"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev --parallel --no-cache",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "dev:server": "turbo run dev --filter=server",
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielgithiomi/TwoDo.git"
  },
  "author": "danielgithiomi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielgithiomi/TwoDo/issues"
  },
  "homepage": "https://github.com/danielgithiomi/TwoDo#readme",
  "devDependencies": {
    "husky": "^9.1.7",
    "turbo": "^2.5.8"
  },
  "packageManager": "npm@10.9.2"
}
